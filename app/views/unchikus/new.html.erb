        <div id="content-1">
          <%= render :partial => 'share/spec' %>
        </div>
        <div id="content-2">
          <div class="content-wrap">
            <div class="content-area header-wrapper">
              <div class="content-header">
                <h3>うんちく</h3>
                <hr>
                <div class="sub-header">Comments</div>
              </div>
              <% form_for(@comment, {:url => unchikus_path({:rubygem_id => @gem.to_param}), :html => {:class => "niceforms"}}) do |f|  %>
              <div class="list-wrapper">
                <ol>
                  <li>
                    <div class="commentboxgrey">
                      <h2 class="comment-title"><%= f.text_field(:title) %></h2>
                      <div class="comments-wrapper">
                        <p><%= f.text_area(:comment) %></p>
                      </div>
                    </div>
                  </li>
                </ol>
                <div class="comment-add right-side"><%= f.submit("追加") %></div>
              </div><!-- end of list-wrapper -->
              <% end -%>
              <div class="content-footer right-side"><%= link_to('戻る', rubygem_path(@gem)) %></div>
            </div>
          </div>
        </div>
